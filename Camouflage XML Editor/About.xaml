<Window x:Class="CamouflageXmlEditor.About"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CamouflageXmlEditor"
        mc:Ignorable="d"
        Title="About" WindowStyle="None" SizeToContent="WidthAndHeight" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <StackPanel>
        <Image Height="100" Margin="10" Source="appicon.png"/>
        <TextBlock TextWrapping="Wrap" Text="Camouflage XML Editor 1.0 by notyourfather" HorizontalAlignment="Center" Margin="18,10,17,10" FontSize="16"/>
        <Button x:Name="BtnOkAbout" Content="OK" Margin="0,0,0,10" Click="BtnOkAbout_Click_1" HorizontalAlignment="Center" Padding="20,5"/>
    </StackPanel>
</Window>
